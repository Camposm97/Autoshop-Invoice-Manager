<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WorkOrderTableController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <GridPane hgap="8.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="tfId" promptText="ID" />
            <TextField fx:id="tfFirst" promptText="First Name" GridPane.columnIndex="1" />
            <TextField fx:id="tfLast" promptText="Last Name" GridPane.columnIndex="2" />
            <TextField fx:id="tfComp" promptText="Company" GridPane.columnIndex="3" />
            <TextField fx:id="tfYear" promptText="Year" GridPane.columnIndex="4" />
            <TextField fx:id="tfMake" promptText="Make" GridPane.columnIndex="5" />
            <TextField fx:id="tfModel" promptText="Model" GridPane.columnIndex="6" />
            <HBox alignment="CENTER" GridPane.columnIndex="7">
               <children>
                  <ComboBox fx:id="cbDateFilter" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                  <DatePicker fx:id="dpBefore" editable="false" />
                  <DatePicker fx:id="dpAfter" disable="true" editable="false" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="8.0" GridPane.columnIndex="8">
               <children>
                  <Button fx:id="btEdit" disable="true" mnemonicParsing="false" onAction="#editWorkOrder" text="Edit" />
                  <Button fx:id="btDelete" disable="true" mnemonicParsing="false" onAction="#deleteWorkOrder" text="Delete" />
               </children>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </HBox>
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" />
         </GridPane.margin>
      </GridPane>
      <TableView fx:id="tv" stylesheets="@../css/default.css" GridPane.rowIndex="1">
         <columns>
            <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colCustomer" prefWidth="200.0" text="Customer Name" />
            <TableColumn fx:id="colCompany" prefWidth="200.0" text="Company" />
            <TableColumn fx:id="colVehicle" prefWidth="300.0" text="Vehicle" />
            <TableColumn fx:id="colDateCreated" prefWidth="150.0" text="Date Created" />
            <TableColumn fx:id="colDateCompleted" prefWidth="150.0" text="Date Completed" />
            <TableColumn fx:id="colInvoiceTotal" prefWidth="150.0" text="Invoice Total" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
