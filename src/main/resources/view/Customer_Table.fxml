<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="root" vgap="5.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerTableController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <GridPane hgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="tfFirstName" promptText="First Name" />
            <TextField fx:id="tfLastName" promptText="Last Name" GridPane.columnIndex="1" />
            <fx:include fx:id="tfPhone" source="PhoneField.fxml" GridPane.columnIndex="2" />
            <TextField fx:id="tfEmail" promptText="Email" GridPane.columnIndex="3" />
            <TextField fx:id="tfCompany" promptText=" Company Name" GridPane.columnIndex="4" />
            <TextField fx:id="tfStreet" promptText="Address" GridPane.columnIndex="5" />
            <TextField fx:id="tfCity" promptText="City" GridPane.columnIndex="6" />
            <TextField fx:id="tfState" promptText="State" GridPane.columnIndex="7" />
            <TextField fx:id="tfZip" promptText="Zip" GridPane.columnIndex="8" />
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </GridPane>
      <TableView fx:id="tvCustomer" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" stylesheets="@../css/default.css" GridPane.rowIndex="1">
         <columns>
            <TableColumn fx:id="colFirstName" prefWidth="75.0" text="First Name" />
            <TableColumn fx:id="colLastName" prefWidth="75.0" text="Last Name" />
            <TableColumn fx:id="colPhone" prefWidth="75.0" text="Phone" />
            <TableColumn fx:id="colEmail" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="colCompany" prefWidth="75.0" text="Company" />
            <TableColumn fx:id="colAddress" prefWidth="75.0" text="Address" />
            <TableColumn fx:id="colCity" prefWidth="75.0" text="City" />
            <TableColumn fx:id="colState" prefWidth="75.0" text="State" />
            <TableColumn fx:id="colZip" prefWidth="75.0" text="Zip" />
         </columns>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </TableView>
      <TableView fx:id="tvVehicle" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" GridPane.rowIndex="3">
        <columns>
          <TableColumn fx:id="colVin" prefWidth="75.0" text="VIN" />
            <TableColumn fx:id="colYear" prefWidth="75.0" text="Year" />
            <TableColumn fx:id="colMake" prefWidth="75.0" text="Make" />
            <TableColumn fx:id="colModel" prefWidth="75.0" text="Model" />
          <TableColumn fx:id="colLicensePlate" prefWidth="75.0" text="License Plate" />
            <TableColumn fx:id="colColor" prefWidth="75.0" text="Color" />
            <TableColumn fx:id="colEngine" prefWidth="75.0" text="Engine" />
            <TableColumn fx:id="colTransmission" prefWidth="75.0" text="Transmission" />
        </columns>
      </TableView>
      <HBox fx:id="hBoxVehControls" alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="4">
         <children>
          <Button fx:id="btDelVehicle" disable="true" mnemonicParsing="false" onAction="#deleteVehicle" text="Delete Vehicle" />
            <Button fx:id="btWorkOrderWithCustomerAndVehicle" disable="true" mnemonicParsing="false" onAction="#createWorkOrderWithCustomerAndVehicle" text="Create Work Order with Customer &amp; Vehicle" />
         </children>
      </HBox>
      <HBox fx:id="hBoxCusControls" alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="2">
         <children>
          <Button fx:id="btDelCustomer" disable="true" mnemonicParsing="false" onAction="#deleteCustomer" text="Delete Customer" />
            <Button fx:id="btWorkOrderWithCustomer" disable="true" mnemonicParsing="false" onAction="#createWorkOrderWithCustomer" text="Create Work Order with Customer" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
