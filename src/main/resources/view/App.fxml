<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="root" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppController">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <Menu mnemonicParsing="false" text="New...">
                     <items>
                    <MenuItem mnemonicParsing="false" onAction="#addCustomer" text="Customer" />
                        <MenuItem mnemonicParsing="false" onAction="#addVehicle" text="Vehicle" />
                        <MenuItem mnemonicParsing="false" onAction="#addWorkOrder" text="Work Order" />
                     </items>
                  </Menu>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Preferences..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#viewCustomers" text="Customer" />
                  <MenuItem mnemonicParsing="false" onAction="#viewVehicles" text="Vehicle" />
                  <MenuItem mnemonicParsing="false" onAction="#viewWorkOrders" text="Work Order" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
